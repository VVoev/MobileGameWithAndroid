<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:androidtools="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/icytower2">

    <LinearLayout
        android:id="@+id/yourDetailsLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        androidtools:layout_editor_absoluteX="8dp">
        <Button
            android:id="@+id/yourDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/button_margin"
            android:layout_weight="6.14"
            android:background="@drawable/roundshapebutton"
            android:onClick="MakePhoto"
            android:text="@string/make_photo"
            android:textSize="20sp" />
        <!--<ImageView-->
            <!--android:id="@+id/yourPicture"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:contentDescription="string/yourPictureShouldBeHere" />-->
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/yourDetails"
        android:layout_marginTop="100dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please enter your name :"
            android:textSize="25sp"
            android:textColor="@color/menuOtherColors"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="150dp">
        <EditText
            android:id="@+id/yourName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:background="@color/white"
            android:textColor="@color/menuPrimaryDark"
            android:text=""/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/button_margin"
            android:layout_weight="6.14"
            android:background="@drawable/roundshapebutton"
            android:onClick="saveName"
            android:text="@string/Save"
            android:textSize="20sp" />
    </LinearLayout>
</RelativeLayout>